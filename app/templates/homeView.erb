<% if(status) { %>
    <h3>Status</h3>
    <ul class="list-group">
        <li class="list-group-item">
            <h4 class="list-group-item-heading">Tagesrezept</h4>
            <p class="list-group-item-text"><%= status.dailyDish %></p>
        </li>
        <li class="list-group-item">
            <span class="badge"><%= status.recipes %></span>
            <h4 class="list-group-item-heading">Rezepte</h4>
        </li>
        <li class="list-group-item">
            <span class="badge"><%= status.users %></span>
            <h4 class="list-group-item-heading">User</h4>
        </li>
        <li class="list-group-item">
            <span class="badge"><%= status.ingredients %></span>
            <h4 class="list-group-item-heading">Zutaten</h4>
        </li>
        <li class="list-group-item">
            <span class="badge"><%= status.tags %></span>
            <h4 class="list-group-item-heading">Tags</h4>
        </li>
    </ul>
    <h3>DB-Status</h3>
    <ul class="list-group">
        <li class="list-group-item">
            <h4 class="list-group-item-heading">Active</h4>
            <p class="list-group-item-text"><%= status.connectionStatus.numActive %>/<%= status.connectionStatus.maxActive %></p>
        </li>
        <li class="list-group-item">
            <h4 class="list-group-item-heading">Idle</h4>
            <p class="list-group-item-text"><%= status.connectionStatus.numIdle %>/<%= status.connectionStatus.maxIdle %></p>
        </li>
    </ul>
<% } %>

<% if(conf) { %>
<h3>Configuration</h3>
<table class="table">
<% _.each(conf, function(value, key) { %>
    <tr><td><%= key %></td><td><%= value %></td></tr>
<% }); %>
</table>
<% } %>

<h3>Options</h3>
<button type="button" id="sitemapButton" class="btn btn-primary">Generate Sitemaps</button>

